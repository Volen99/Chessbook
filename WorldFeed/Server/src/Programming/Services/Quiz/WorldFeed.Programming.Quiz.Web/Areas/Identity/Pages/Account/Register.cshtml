@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

@*<h2>@ViewData["Title"]</h2>*@
@if (this.TempData["InfoMessage"] != null)
{
    <div role="alert" class="alert alert-danger alert-dismissible">
        <a class="close" href="#" data-dismiss="alert" aria-label="close" title="close">&times;</a>
        @this.TempData["InfoMessage"]
    </div>
}
<html class="register-background" lang="en">
<body class="register-background">
    <div class="content">
        <div class="row" style="margin-right: 0px">
            <div class="col-md-4">
                <h1 style="color: #ffffff;">Create a new account</h1>
                <hr />
                <form asp-route-returnUrl="@Model.ReturnUrl" method="post" style="color: #ff6ced;">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.UserName"></label>
                        <input asp-for="Input.UserName" class="form-control" />
                        <span asp-validation-for="Input.UserName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password"></label>
                        <input asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.ConfirmPassword"></label>
                        <input asp-for="Input.ConfirmPassword" class="form-control" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-default">Register</button>
                    <hr />
                </form>
            </div>
            <div class="col-md-6 col-md-offset-2">
                <section>
                </section>
            </div>
        </div>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>
